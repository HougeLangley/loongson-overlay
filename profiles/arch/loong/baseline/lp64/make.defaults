# LoongArch baseline/lp64 no-multilib profile

CFLAGS="-O2 -pipe -march=loongarch64 -mabi=lp64"
CXXFLAGS="${CFLAGS}"
FFLAGS="${CFLAGS}"
FCFLAGS="${CFLAGS}"

# We have only one ABI
MULTILIB_ABIS="lp64"
DEFAULT_ABI="lp64"
ABI="lp64"

# Temporarily workaround multilib.eclass having no support for LoongArch
#LIBDIR_default="lib64"
CONF_LIBDIR="lib64"
CFLAGS_default="-mabi=lp64"
LDFLAGS_default="-m elf64loongarch"
CHOST_default="loongarch64-unknown-linux-gnu"
